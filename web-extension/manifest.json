{
  "manifest_version": 3,
  "name": "StopWaste",
  "version": "1.0",
  "description": "Block short-form content and distractions on Instagram and YouTube",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "storage"
  ],
  "default_locale": "en",
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*"
      ],
      "css": [
        "instagram.css"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "css": [
        "youtube.css"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "options/options.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "instagram.css",
        "youtube.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}